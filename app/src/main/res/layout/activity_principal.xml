<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kmk.gotraffic.view.Principal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/principal_btnMapa"
            style="@style/ButtonGreen"
            android:text="@string/btn_Mapa" />

        <Button
            android:id="@+id/principal_btnConta"
            style="@style/ButtonBlue"
            android:text="@string/btn_Conta" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/principal_btnHole"
            style="@style/ButtonGray"
            android:clickable="false"
            android:text="Buraco" />

        <Button
            android:id="@+id/principal_btnCrash"
            style="@style/ButtonGray"
            android:state_pressed="true"
            android:text="Acidente" />

        <Button
            android:id="@+id/principal_btnTraffic"
            style="@style/ButtonGray"
            android:state_pressed="true"
            android:text="Congestionamento" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/principal_btnMapeamento"
            style="@style/ButtonGreen"
            android:state_pressed="true"
            android:text="@string/btn_Mapeamento" />

        <Button
            android:id="@+id/principal_btnCheckIn"
            style="@style/ButtonBlue"
            android:state_pressed="true"
            android:text="@string/btn_CheckIn" />

        <Button
            android:id="@+id/principal_btnNavegacao"
            style="@style/ButtonGreen"
            android:state_pressed="true"
            android:text="@string/btn_Navegacao" />

    </LinearLayout>

</LinearLayout>
